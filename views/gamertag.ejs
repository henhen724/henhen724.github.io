<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-connectdevelop"></i>  Link Epic Games Account</h1>
            <% include ./partials/messages %>
            <form action="/link/gamertag" method="POST">
                <div class="form-group">
                    <select id="platform" type="platform" name="platform" class="custom-select">
                        <option selected="" value="">Select Platform</option>
                        <option value="pc">PC/Mac</option>
                        <option value="xbl">Xbox Live</option>
                        <option value="psn">PSN</option>
                    </select>
                </div>
                <div class="form-group">
                    <input
                    id="name"
                    type="name"
                    name="name"
                    class="form-control"
                    placeholder="Enter Display Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Verify Account
                </button>
            </form>
        </div>
    </div>
</div>