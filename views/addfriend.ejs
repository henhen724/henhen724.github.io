<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-plus"></i>  Add Friend</h1>
            <% include ./partials/messages %>
            <form action="/link/addfriend" method="POST">
                <div class="form-group">
                    <input
                    id="name"
                    type="name"
                    name="name"
                    class="form-control"
                    placeholder="Enter User's Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Search
                </button>
            </form>
        </div>
        <% if(typeof friends != 'undefined' && friends.length != 0){ %>
            <div class="jumbotron">
                <% friends.forEach(function(friend) { %>
                    <a href="/link/addfriendid?id=<%= encodeURIComponent(friend._id) %>&name=<%= encodeURIComponent(friend.name) %>" class="btn btn-secondary"><%= friend.name %></a>    
                <% }); %>
            </div>
        <% } %>
    </div>
</div>